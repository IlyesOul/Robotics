#include <kipr/wombat.h>

// INTRO DAY "PARKING BOT" CHALLENGE 

int main()
{
    // Move until wall - 2 Points
    while(analog(0) < 2500)
    {
        fd(0);
        fd(1);
    }

    msleep(2000);

    // Move back until detecting colored line - 3 Points
    while(analog(1) < **insert color code**)
    {
        bk(0);
        bk(1);
    }

    // Rotate degrees 90 CCW - 1 Point
    fd(1); // Right motor
    msleep(x) // X amount of seconds

    // Back up into slot - 2 Points
    while(analog(1) < **insert color code**)
    {
        bk(0);
        bk(1);
    }

// TOTAL # OF POINTS: 6
// TIEBREAKER: If two teams achieve the same number of points, the team whose bot moves closer to the initial wall wins

}
