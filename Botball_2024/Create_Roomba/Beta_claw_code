#include <kipr/wombat.h>
void lift0(int t);
void lower0(int t);
void lift1(int t);
void lower1(int t);
void lift2(int t);
void lower2(int t);


int main()
{
    //Code to test all claw joints to see if they move.  This works as a class so this method is only for testing purposes
    printf("1\n");
    lift0(1000);
    printf("2\n");
    lower0(1000);
    printf("3\n");
    lift1(1000);
    printf("4\n");
    lift1(1000);
    printf("5\n");
    lower1(1000);
    printf("6\n");
    lift2(2000);
    printf("7\n");
    lower2(2000);
    printf("8\n");
    return 0;
}
//turn motor plug in port 0 for t ms
//has built in safety to prevent motor from burning out(same for rest of methods)
//lift the bottem part of the arm with the longest metal piece 
void lift0(int t){
    t-=75;
    msleep(5);
    move_at_velocity(0,0);
    msleep(5);
    move_at_velocity(0,500);
    double count=0,pos=gmpc(0);
    while(count<t){
        pos=gmpc(0);
        msleep(t/500.0);
        if(gmpc(0)<pos)
            move_at_velocity(0,0);
        count+=t/500.0;
    }
    move_at_velocity(0,0);
    msleep(65);
}
//turn motor plug in port 0 for t ms
//lowers down the bottem part of the arm with the longest metal piece 
void lower0(int t){
    t-=75;
    msleep(5);
    move_at_velocity(0,0);
    msleep(5);
    move_at_velocity(0,-500);
    double count=0,pos=gmpc(0);
    while(count<t){
        pos=gmpc(0);
        msleep(t/500.0);
        if(gmpc(0)>pos)
            move_at_velocity(0,0);
        count+=t/500.0;
    }
    move_at_velocity(0,0);
    msleep(65);
}
//turn motor plug in port 1 for t ms
//lift up the middle part of the arm with the middle length metal piece 
void lift1(int t){
    t-=75;
    msleep(5);
    move_at_velocity(1,0);
    msleep(5);
    move_at_velocity(1,500);
    double count=0,pos=gmpc(1);
    while(count<t){
        pos=gmpc(1);
        msleep(t/500.0);
        if(gmpc(1)<pos)
            move_at_velocity(1,0);
        count+=t/500.0;
    }
    move_at_velocity(1,0);
    msleep(65);
}
//turn motor plug in port 1 for t ms
//lower the middle part of the arm with the middle length metal piece 
void lower1(int t){
    t-=75;
    msleep(5);
    move_at_velocity(1,0);
    msleep(5);
    move_at_velocity(1,-500);
    double count=0,pos=gmpc(1);
    while(count<t){
        pos=gmpc(1);
        msleep(t/500.0);
        if(gmpc(1)>pos)
            move_at_velocity(1,0);
        count+=t/500.0;
    }
    move_at_velocity(1,0);
    msleep(65);
}
//turn motor plug in port 2 for t ms
