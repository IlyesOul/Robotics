    t-=75;
    msleep(5);
    move_at_velocity(2,0);
    msleep(5);
    move_at_velocity(2,-500);
    double count=0,pos=gmpc(2);
    while(count<t){
        pos=gmpc(2);
        msleep(t/500.0);
        if(gmpc(2)>pos)
            move_at_velocity(2,0);
        count+=t/500.0;
    }
    move_at_velocity(2,0);
    msleep(65);
